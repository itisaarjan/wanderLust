<%layout("../views/layouts/boilerplate")%>
<h1 class="offset-3 mt-2 mb-4">Sign up to join wanderLust today!!!</h1>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <div class="mb-2">
                <label for="username" class="form-label mt-3">Username</label>
            <input type="text" name="username" id="username" class="form-control " required>
            <div class="invalid-feedback">
                Please enter valid username
            </div>
            </div>
            <div class="mb-2">
                <label for="email" class="form-label mt-3">E-mail</label>
                <input type="email" name="email" id="email" class="form-control" required>
                <div class="invalid-feedback">
                    Please enter valid email
                </div>
            </div>
    <div class="mb-2">
                <label for="password" class="form-label mt-3">Password</label>
            <input type="password" name="password" id="password" class="form-control" required>
            <div class="invalid-feedback">Please enter valid passport</div>
    </div>
            <button class="btn btn-dark mt-3 offset-5">Sign up</button>
        </form>
    </div>
</div>